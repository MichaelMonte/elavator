if (floor<1)
				{
					System.out.println("Invalid Input");
					System.out.println("Enter the floor that you'd like to go to ==> ");
					floor = stdIn.nextInt();
					selectFloor();
					//validate(floor);
				}
				else if (floor>100)
				{
					System.out.println("invalid input");
					System.out.println("Enter the floor that you'd like to go to ==> ");
					floor = stdIn.nextInt();
					selectFloor();
					//validate(floor);
				}
				else
				{
					System.out.println("\ngoing to floor " + floor);
						if (floor>0)
						{
							for(int i=previousFloor; i<=floor; i++)
							{
					              System.out.print(i + "..");
					              previousFloor = i;
					              if(previousFloor==floor)
					              {
					            	  System.out.println("Ding!");
					            	  previousFloor=floor;
					            	  keepGoing = true;
					              }
							}
						}
						else if (previousFloor>floor)
						{
							for(int i=previousFloor; i>=floor; i--)
							{
								  System.out.print(i + "..");
					              previousFloor = i;
					              if(previousFloor==floor)
					              {
					            	  System.out.println("Ding!");
					            	  previousFloor=floor;
					            	  keepGoing = true;
					              }
							}
						}
				}
