import java.util.Scanner;

/*******************************************
 * ElevatorDriver.java
 * ------------------name
 * 
 * This class is a driver class for the elevator application that uses
 * 2 other classes to complete its function.
 *******************************************/

public class ElevatorDriver {

	static Scanner input = new Scanner(System.in);
	static Elevator hilton  = new Elevator();
	
	
	public static void main(String[] args) {
		
		
		String option;
	
		System.out.println("Welcome to Micheol's Elevator simulator");
		System.out.println("Options: ");
        System.out.println("     s - Select a floor");
        System.out.println("     f - Fire alarm");
        System.out.println("     q - Quit");
        //go through loop until user input q as command
        while (true) {
            //take command from user
            System.out.print("\nEnter command ==>  ");
            option = input.nextLine();
            switch (option) {
                case "s":
                	hilton.selectFloor();
                    break;
                case "f":
                    hilton.fireAlarm();
                   break;
                case "q":
                    System.exit(0);
                    break;
                default:
                    System.out.println("invalid input");
                    break;
		
	
		
            }

        }
}

}
	
class Elevator{
	
	Scanner stdIn = new Scanner(System.in);
	public void selectFloor(){
		
		int floor;
		int previousFloor = 1;
		boolean keepGoing = false;
		System.out.println("Enter the floor that you'd like to go to ==> ");
		floor = stdIn.nextInt();
		//validate(floor);
			do
			{
		
				if (floor<1)
				{
					System.out.println("Invalid Input");
					System.out.println("Enter the floor that you'd like to go to ==> ");
					floor = stdIn.nextInt();
					selectFloor();
					//validate(floor);
				}
				else if (floor>100)
				{
					System.out.println("invalid input");
					System.out.println("Enter the floor that you'd like to go to ==> ");
					floor = stdIn.nextInt();
					selectFloor();
					//validate(floor);
				}
				else
				{
					System.out.println("\ngoing to floor " + floor);
						if (floor>0)
						{
							for(int i=previousFloor; i<=floor; i++)
							{
					              System.out.print(i + "..");
					              previousFloor = i;
					              if(previousFloor==floor)
					              {
					            	  System.out.println("Ding!");
					            	  previousFloor=floor;
					            	  keepGoing = true;
					              }
							}
						}
						else if (previousFloor>floor)
						{
							for(int i=previousFloor; i>=floor; i--)
							{
								  System.out.print(i + "..");
					              previousFloor = i;
					              if(previousFloor==floor)
					              {
					            	  System.out.println("Ding!");
					            	  previousFloor=floor;
					            	  keepGoing = true;
					              }
							}
						}
				}
			}while(keepGoing);
			
	}
	
	
	/*private void validate(int floor)
